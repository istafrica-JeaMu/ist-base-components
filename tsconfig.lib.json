{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "rootDir": "src",
    "composite": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": false
  },
  "include": [
    "src/index.ts",
    "src/components/**/*.vue",
    "src/components/**/*.ts",
    "src/utilities.css"
  ],
  "exclude": [
    "src/main.ts",
    "src/App.vue",
    "src/views/**/*",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "tests/**/*",
    "examples/**/*",
    "node_modules",
    "dist"
  ]
} 