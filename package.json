{
  "name": "ist-base-components",
  "version": "1.0.0",
  "description": "Base Vue.js components extending PrimeVue for reuse across frontend applications",
  "main": "dist/index.js",
  "module": "dist/index.esm",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.esm",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./style.css": "./dist/style.css"
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "build:lib": "vue-tsc --project tsconfig.lib.json && vite build --config vite.lib.config.ts",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "type-check": "vue-tsc --noEmit",
    "prepublishOnly": "npm run build:lib",
    "test:install": "echo 'See examples/npm-install-test.md for installation testing instructions'"
  },
  "dependencies": {
    "primeicons": "^6.0.1",
    "primevue": "^3.53.1",
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitejs/plugin-vue": "^4.6.2",
    "@vue/tsconfig": "^0.5.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.17.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.0",
    "typescript": "~5.2.0",
    "vite": "^5.4.19",
    "vue-tsc": "^1.8.0"
  },
  "peerDependencies": {
    "vue": "^3.4.0"
  },
  "keywords": [
    "vue",
    "components",
    "primevue",
    "base-components",
    "ui-library"
  ],
  "author": "IST Team",
  "license": "MIT"
}
